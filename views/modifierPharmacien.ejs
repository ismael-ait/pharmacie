<%- include('script_header') %> 

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="bg-light rounded" style="border: 2px solid #343a40; padding: 20px;">
          <h3 class="text-success text-center mb-4">Modifier un pharmacien</h3>
          <form action="/pharmaciens/modifier/<%= pharmacien.Pharmacien_Id %>" method="POST">
            <div class="mb-3">
              <label class="form-label" for="nom">Nom :</label>
              <input class="form-control" type="text" name="nom" id="nom" required value="<%= pharmacien.Pharmacien_Nom %>">
            </div>
            <div class="mb-3">
              <label class="form-label" for="prenom">Pr√©nom :</label>
              <input class="form-control" type="text" name="prenom" id="prenom" required value="<%= pharmacien.Pharmacien_Prenom %>">
            </div>
            <div class="mb-3">
              <label class="form-label" for="nomUtilisateur">Nom d'utilisateur :</label>
              <input class="form-control" type="text" name="nomUtilisateur" id="nomUtilisateur" required value="<%= pharmacien.Pharmacien_NomUtilisateur %>">
            </div>
            <div class="mb-3">
              <label class="form-label" for="motDePasse">Mot de passe :</label>
              <input class="form-control" type="text" name="motDePasse" id="motDePasse" required value="<%= pharmacien.Pharmacien_MotDePasse %>">
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
              <a href="/pharmaciens" class="btn btn-secondary">Annuler</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
